require File.expand_path(File.dirname(__FILE__) + '/../command_base')
require File.expand_path(File.dirname(__FILE__) + '/../underlying_builder')

module FluentCommandBuilder
  def <%= version_factory_method_name %>(<%= factory_method_args.join(', ') %>)
    b = UnderlyingBuilder.new
    c = <%= command_module_name %>::<%= version_module_name %>.create <%= (%w(b) + initializer_values).join(', ') %>
    yield b if block_given?
    c
  end
  module <%= command_module_name %>
    module <%= version_module_name %>
      def self.create(<%= (%w(underlying_builder) + factory_method_args).join(', ') %>)
        <%= command_class_name %>.new <%= (%w(underlying_builder) + initializer_values).join(', ') %>
      end
      def <%= command_factory_method_name %>(<%= factory_method_args.join(', ') %>)
        b = UnderlyingBuilder.new
        c = <%= version_module_name %>.create <%= (%w(b) + initializer_values).join(', ') %>
        yield b if block_given?
        c
      end
      <%= command_class %>
    end
  end
end