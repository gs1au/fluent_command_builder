require File.expand_path(File.dirname(__FILE__) + '/../underlying_builder')
require File.expand_path(File.dirname(__FILE__) + '/../util')

module FluentCommandBuilder
  def <%= factory_method_name %>(&block)
    <%= module_name %>.create &block
  end
  module <%= module_name %>
    COMMAND_NAME = '<%= command_name %>'
    def self.create
      b = UnderlyingBuilder.new FluentCommandBuilder::<%= module_name %>::COMMAND_NAME
      c = version_module(<%= module_name %>).create b
      yield b if block_given?
      c
    end
  end
end