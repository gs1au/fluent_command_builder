require File.expand_path(File.dirname(__FILE__) + '/../underlying_builder')

module FluentCommandBuilder
  def <%= model[:factory_method_name] %>(&block)
    <%= model[:module_name] %>.create &block
  end
  module <%= model[:module_name] %>
    COMMAND_NAME = '<%= model[:command_name] %>'
    def self.version_detector
      @version_detector ||= <%= model[:version_detector] %>
    end
    def self.version_detector=(value)
      @version_detector = value
    end
    def self.version(path=nil)
      self.version_detector.version path
    end
    def self.create(&block)
      version_module(<%= model[:module_name] %>).create &block
    end
  end
end